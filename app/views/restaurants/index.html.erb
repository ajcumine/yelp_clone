<h1>Restaurants#index</h1>
<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <%= restaurant.name %>
    <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete, data: {confirm: 'Are you sure?'} %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_reviews_path(restaurant) %>
    <h3 class='average_review'>
      <%= restaurant.average_score %>
    </h3>
  <% end %>
<% else %>
  No restaurants yet
<% end %>


<%= link_to 'Add a restaurant', new_restaurant_path %>

